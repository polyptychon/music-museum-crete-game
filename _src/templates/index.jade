- var mainMenuActiveIndex = -1;
- var brandName = "ΓΝΩΡΙΖΟΝΤΑΣ ΤΗ ΜΟΥΣΙΚΗ ΚΑΙ ΧΟΡΕΥΤΙΚΗ ΠΑΡΑΔΟΣΗ ΤΗΣ ΚΡΗΤΗΣ";
- var pageTitle = brandName;
- var letters = ['α','β','γ','δ','ε','ζ','η','θ','ι','κ','λ','μ','ν','ξ','ο','π','ρ','σ','τ','υ','φ','χ','ψ','ω']
doctype html
html
  head
    include partials/header
  body
    .quiz
      header
        .container
          .col-md-12
            .score
              span.score-name ΒΑΘΜΟΛΟΓΙΑ&nbsp;&nbsp;
              span.score-value 0
      .container
        each question,index in locals.data.questions
          .question-container(class=index==0?"active":"")
            .left-panel
              h4.question-heading
                span.question-name ΕΡΩΤΗΣΗ
                span.question-value (#{index+1}/#{locals.data.questions.length})
              .question Ποιός μουσικός από τους παρακάτω έπαιζε λαούτο
              ul.answers
                each answer,index in question.answers
                  li
                    if answer.img
                      - var img="assets/images/"+answer.img;
                      a(data-content="<img src=\"#{img}\">")=letters[index].toUpperCase()+". "+answer.label
                    else
                      a(href="javascript:")=letters[index].toUpperCase()+". "+answer.label
            .right-panel
              .image-container
                img(src="assets/images/"+question.image)

    script(type="text/javascript", src="assets/js/main.js" async)
